# This is Git's per-user configuration file.
[color]
  status = auto
  branch = auto
  interactive = auto
  diff = auto
	ui = true
[push]
	recurseSubmodules = check
[init]
	defaultBranch = main
[credential]
	helper = store
[pull]
	rebase = false
[rerere]
  enabled = true
[rebase]
  autosquash = true
  updateRefs = true
[alias]
	commit-reuse = ! git commit -eF $(git rev-parse --git-dir)/COMMIT_EDITMSG
[include]
	path=~/.gitconfig.local
