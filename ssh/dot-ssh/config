# .ssh/config

Include config.d/*.conf

Host *
  # Connection multiplexing settings
  ControlMaster auto
  ControlPersist 4h
  ControlPath ~/.ssh/cm-%r@%h:%p

  # Keep alive settings
  ServerAliveInterval 30
  ServerAliveCountMax 20

  # Security settings
  HashKnownHosts yes
  AddKeysToAgent yes
  IdentitiesOnly yes
